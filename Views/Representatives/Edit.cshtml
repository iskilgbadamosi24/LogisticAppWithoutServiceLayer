@model RepresentativeCountryBranchPercentageViewModel

@{
    ViewData["Title"] = "Edit";
    SelectList countrItem = new SelectList(Model.Countries, "Id", "Name");
    SelectList BranchsItem = new SelectList(Model.Branchs, "Id", "Name");
    SelectList DiscountTypes = new SelectList(Model.DiscountTypes, "Id", "Percentage");
}

<h1>Edit Representative</h1>


<div class="container my-2">
    <div class="row justify-content-between">
        <div>
            <h6 class="mt-2"><i class="fa-solid fa-house"></i> ><a asp-action="Index" class="text-decoration-none">Representatives</a> > <b><a href="#" class="text-decoration-none">Edit Representative</a></b></h6>
        </div>
    </div>
</div>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-controller="Representatives" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input  asp-for="AppUserId" hidden="" />
            <div class="row">
                <div class="form-group col-md-4">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <input asp-for="Password" hidden="" value="@Model.Password" />
                <div class="form-group col-md-4">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="CompanyPercentageOfOrder" class="control-label"></label>
                    <input asp-for="CompanyPercentageOfOrder" class="form-control" />
                    <span asp-validation-for="CompanyPercentageOfOrder" class="text-danger"></span>
                </div>

                <div class="form-group col-md-4">
                    <label asp-for="CountryId" class="control-label"></label>
                    <select class="form-control" asp-for="CountryId" asp-items="countrItem">
                        <option value="0">----- Select Country-------</option>
                    </select>
                    <span asp-validation-for="CountryId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="BranchId" class="control-label"></label>
                    <select class="form-control" asp-for="BranchId" asp-items="BranchsItem">
                        <option value="0">----- Select Branch-------</option>
                    </select>
                    <span asp-validation-for="BranchId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="DiscountTypeId" class="control-label"></label>
                    <select class="form-control" asp-for="DiscountTypeId" asp-items="DiscountTypes">
                        <option value="0">----- Select Discount Type-------</option>
                    </select>
                    <span asp-validation-for="DiscountTypeId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-12">
                    <input type="submit" value="Edit" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>

                </div>
            </div>
           
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}