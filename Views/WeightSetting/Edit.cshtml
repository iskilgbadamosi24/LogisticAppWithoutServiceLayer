@model Shipping_System.Models.WeightSetting

<h2>Edit Weight Setting</h2>


<div class="container my-2">
    <div class="row justify-content-between">
        <div>
            <h6 class="mt-2"><i class="fa-solid fa-house"></i> ><a asp-action="Index" class="text-decoration-none">Weight Setting</a> > <b><a href="#" class="text-decoration-none">Edit Weight Setting</a></b></h6>
        </div>
    </div>
</div>

<hr />

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="DefaultSize">Default Size</label>
        <input asp-for="DefaultSize" class="form-control" />
        <span asp-validation-for="DefaultSize" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PriceForEachExtraKilo">Price For Each Extra Kilogram</label>
        <input asp-for="PriceForEachExtraKilo" class="form-control" />
        <span asp-validation-for="PriceForEachExtraKilo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>