@model Country
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Country</h1>

<div class="container my-2">
    <div class="row justify-content-between">
        <div>
            <h6 class="mt-2"><i class="fa-solid fa-house"></i> ><a asp-action="Index" class="text-decoration-none">Countries</a> > <b><a asp-action="Edit" class="text-decoration-none">Edit Country</a></b></h6>
        </div>
    </div>
</div>

<hr />

<form method="post" asp-action="Edit">
    @Html.AntiForgeryToken()
    <input class="form-control" asp-for="Id" hidden="" />
    <div >
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <input type="submit" value="Save" class="btn btn-primary mt-4"   />
</form>