@model TraderAndUserViewModel

@{
    ViewData["Title"] = "Edit";
    SelectList countrItem = new SelectList(Model.Countries, "Id", "Name");
    SelectList BranchsItem = new SelectList(Model.Branchs, "Id", "Name");
    SelectList citesList = new SelectList(Model.Cities, "Id", "Name");
}

<h1>Edit Trader</h1>


<div class="container my-2">
    <div class="row justify-content-between">
        <div>
            <h6 class="mt-2"><i class="fa-solid fa-house"></i> ><a asp-action="Index" class="text-decoration-none">Traders</a> > <b><a href="#" class="text-decoration-none">Edit Trader</a></b></h6>
        </div>
    </div>
</div>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="AppUserId" hidden />
            <div class="row">
                <div class="form-group col-md-4">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4" hidden>
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" value="@Model.Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="StoreName" class="control-label"></label>
                    <input asp-for="StoreName" class="form-control" />
                    <span asp-validation-for="StoreName" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="SpecialPickupCost" class="control-label"></label>
                    <input asp-for="SpecialPickupCost" class="form-control" />
                    <span asp-validation-for="SpecialPickupCost" class="text-danger"></span>
                </div>
                @* <div class="form-group col-md-4"> *@
                @*     <label asp-for="TraderTaxForRejectedOrders" class="control-label"></label> *@
                @*     <input asp-for="TraderTaxForRejectedOrders" class="form-control" /> *@
                @*     <span asp-validation-for="TraderTaxForRejectedOrders" class="text-danger"></span> *@
                @* </div> *@
                <div class="form-group col-md-4">
                    <label asp-for="CountrId" class="control-label"></label>
                    <select class="form-control" asp-for="CountrId" asp-items="countrItem">
                        <option value="0">----- Select Country -------</option>
                    </select>
                    <span asp-validation-for="CountrId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="BranchId" class="control-label"></label>
                    <select class="form-control" asp-for="BranchId" asp-items="BranchsItem">
                        <option value="0">----- Select Branch -------</option>
                    </select>
                    <span asp-validation-for="BranchId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="CityId" class="control-label"></label>
                    <select class="form-control" asp-for="CityId" asp-items="citesList">
                        <option value="0">----- Select City -------</option>
                    </select>
                    <span asp-validation-for="CityId" class="text-danger"></span>
                </div>
                <div class="form-group col-md-12 mt-4">
                    <button type="submit" value="Edit" class="btn btn-primary">Edit</button>
                    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
                </div>

            </div>

        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
